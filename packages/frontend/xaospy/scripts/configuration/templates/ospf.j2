{# OSPF Configuration Template #}
routing-options {
    router-id {{ router_id }};
}

protocols {
    ospf {
        area {{ area_id }} {
            interface {{ interface_name }} {
                {% if hello_interval %}
                hello-interval {{ hello_interval }};
                {% endif %}
                {% if dead_interval %}
                dead-interval {{ dead_interval }};
                {% endif %}
                {% if metric %}
                metric {{ metric }};
                {% endif %}
            }
        }
    }
}
